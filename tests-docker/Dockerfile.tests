FROM ghcr.io/remimikalsen/python-testbed:v1 AS base
# Build the base testbed image first:
#   docker build -t sharepass-testbed:latest -f tests-docker/Dockerfile.testbed .
# Then build this image:
#   docker build -t sharepass-tests -f tests-docker/Dockerfile.tests .
#FROM sharepass-testbed:latest

WORKDIR /testbench

# Ensure Playwright browsers path is set (inherited from base, but explicit for clarity)
ENV PLAYWRIGHT_BROWSERS_PATH=/usr/local/share/playwright-browsers

# Ensure we're root for installation steps (base may have switched to testuser)
USER root

# Create a non-root user for security (if not already present in base)
RUN groupadd -r testuser 2>/dev/null || true && \
    useradd -r -g testuser testuser 2>/dev/null || true

# Prepare app
COPY /app ./app
COPY VERSION ./app
RUN mkdir -p ./app/uploads ./app/database && \
    # Create /app directory structure for app.py compatibility (it expects /app/database)
    # The app code has DATABASE_DIR = "/app/database" hardcoded
    mkdir -p /app/database /app/uploads

# Install production dependencies
COPY requirements.txt .
RUN pip install --upgrade pip setuptools wheel
RUN pip install --no-cache-dir -r requirements.txt

# Copy tests and test requirements
COPY /tests ./tests
RUN pip install --no-cache-dir -r ./tests/requirements-tests.txt

# The entrypoint defines different ways for the app to run
#  - docker run --rm snapfile-tests lint
#  - docker run --rm snapfile-tests test-unit
#  - docker run --rm snapfile-tests test-e2e
COPY tests-docker/entrypoint.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh && \
    # Ensure testuser owns the testbench directory and /app directories
    chown -R testuser:testuser /testbench /app

# Switch to non-root user
USER testuser

# Healthcheck (though test containers are ephemeral, this satisfies Trivy)
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD python -c "import sys; sys.exit(0)" || exit 1

ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]

# Default command if none
CMD []