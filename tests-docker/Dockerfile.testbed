FROM python:3.14-slim

# System dependencies required for building packages and for headless browsers
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libssl-dev \
    libffi-dev \
    curl \
    libgbm1 \
    libgtk-3-0 \
    libasound2 \
    libx11-xcb1 \
    libxcomposite1 \
    libxcursor1 \
    libxdamage1 \
    libxrandr2 \
    libxfixes3 \
    libnss3 \
    libxss1 \
    libxtst6 \
    xdg-utils \
    && rm -rf /var/lib/apt/lists/*

# Install basic testing tools
RUN pip install --no-cache-dir pytest pytest-asyncio

# Install Playwright (or any e2e tool you choose) and its browsers (if needed)
# Install browsers system-wide so they're accessible to all users
ENV PLAYWRIGHT_BROWSERS_PATH=/usr/local/share/playwright-browsers
RUN pip install --no-cache-dir playwright && \
    playwright install --with-deps && \
    # Ensure browsers are accessible to all users
    chmod -R a+rx /usr/local/share/playwright-browsers

# Create a non-root user for security
RUN groupadd -r testuser && useradd -r -g testuser testuser && \
    # Ensure testuser can access necessary directories
    mkdir -p /home/testuser && \
    chown -R testuser:testuser /home/testuser

# Switch to non-root user
USER testuser

# Healthcheck (though test containers are ephemeral, this satisfies Trivy)
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD python -c "import sys; sys.exit(0)" || exit 1